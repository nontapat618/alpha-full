<h1>List of Article</h1>

<%= link_to "Create new article" , new_article_path %>
<table border="1">
    <tr>
        <th> Title </th>
        <th> Description </th>
    </tr>
    <% @articles.each do |article| %>
        <tr>
            <td> <%= article.title %> </td>
            <td> <%= article.description %> </td>
            <td> <%= link_to 'edit' , edit_article_path(article) %> </td>
            <td> <%= link_to 'view' , article_path(article) %> </td>            
        </tr>
    <% end %>    
</table>