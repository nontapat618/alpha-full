<h1 align="center">Signup for Alpha Blog</h1>

<%= render 'shared/errors' , obj: @user %>

<div class="row">
    <div class="col-xs-12">
        <%= form_for @user , :html => {class: "form-horizontal" }  do |f| %>
        
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <%= f.label :username %>
            </div>
            <div class="col-sm-8">
                <%= f.text_field :username ,class: "form-control" , placeholder: "Username" ,autofocus: true %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <%= f.label :email %>
            </div>
            <div class="col-sm-8">
                <%= f.email_field :email , class: "form-control" , placeholder: "Email" %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <%= f.label :password %>
            </div>
            <div class="col-sm-8">
                <%= f.password_field :password ,  class: "form-control" , placeholder: "Enter password" %>
            </div>
        </div>        
        
        <div class="form-group"> 
            <div class="col-sm-offset-2 col-sm-6">
                <%= f.submit 'Sign Up' , class: 'btn btn-primary btn-lg' %>
            </div>
        </div>
        
        <% end %>
        
        
        <div class="col-xs-offset-5 col-xs-4">
            [ <%= link_to 'Back to articles listing' , articles_path %> ]
        </div>
        
    </div>
</div>
